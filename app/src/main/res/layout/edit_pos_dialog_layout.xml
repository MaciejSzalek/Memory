<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/toolbar_color">

    <TextView
        android:id="@+id/edit_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_centerHorizontal="true"
        android:textColor="@color/toolbar_title"
        android:textSize="30sp"
        android:text="@string/edit_todo"/>

    <android.support.v7.widget.AppCompatMultiAutoCompleteTextView
        android:id="@+id/new_dialog_autoComplete_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:layout_below="@+id/edit_dialog_title"
        android:textColor="@color/toolbar_title"
        android:hint="@string/edit_todo"/>

    <ImageButton
        android:id="@+id/delete_position_button"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8sp"
        android:layout_marginStart="8sp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_dialog_autoComplete_textView"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/trash_bin_ic" />

    <ImageButton
        android:id="@+id/edit_position_button"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/new_dialog_autoComplete_textView"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/confirm_ic" />

</RelativeLayout>